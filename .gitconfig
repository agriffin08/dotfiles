[user]
    name = Antonio Griffin
    email = antoniojgriffin@gmail.com

[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    g = grep -I
    lg = log -p
    loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    pb = publish-branch
    rb = rbranch
    rc = rank-contributors
    reflog = reflog --format="* %C(yellow)%h%Creset %gd %C(cyan)%ar%Creset: %gs"
    rv = review
    sm = show-merges
    st = status
    stat = status
    gerp = grep
    grap = grep
    dat = clone
    mah = checkout
    rekt = reset

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

[core]
    editor = vim

[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path = 
[merge]
    tool = vimdiff
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[push]
    default = matching
